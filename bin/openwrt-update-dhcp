#!/bin/bash

# add dir of where this prog was executed from, to PATH
RUN_DIR=$(cd -- "$(dirname "$0")" && pwd)
PATH=$RUN_DIR:/usr/local/bin/:$PATH ; export PATH

cd $RUN_DIR/..

ansible-playbook --diff openwrt_maintenance.yml --extra-vars "run_uci_config=no" --extra-vars "run_packages_config=no" --extra-vars "fast_update_dhcp=yes" --tags openwrt_config "$@"

echo "FIXME: really should force a manual lookup of something here, and back out the change somehow if we can't look it up because we caused all DHCP servers to simultaneously fail"
